  /*overflow: hidden;*/
  /*text-overflow: ellipsis;*/
  /*-webkit-box-orient: vertical;*/
  /*对齐模式*/
  /*-webkit-line-clamp: 2;*/
  /*设置多行的行数*/
}
.recommendContainer .header .more1{
  float: right;
  border: 1rpx solid #333;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
}
.topListSwiper{
  height: 500rpx;

}
.studyItem{
  display: flex;
}
.swiper-item{
  width: 96rpx;
}
.studyItem image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.studyItem .count{
  width: 100rpx;
  height: 150rpx;
  text-align: center;
  line-height: 150rpx;
}
.studyItem .studyname{
  height: 150rpx;
  line-height: 150rpx;
}